{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildWebUI",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ICommerce.WebUI/ICommerce.WebUI.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publishWebUI",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/ICommerce.WebUI/ICommerce.WebUI.csproj",
